#!/bin/bash
clear;
if test -z "$1" 
then
python - << EOF
print("You need to insert the download link !!")
      print("usage: lmao <link>")

EOF
      
else
echo "working please wait...";
      clear;
aria2c $1 -d /app/downloads/ > /dev/null 2>&1 ;

if [ -z "$(ls -A /app/downloads/)" ]; then
clear;
python - << EOF
print("No file Downloaded!! Can't transfer to gdrive, may be you are using a wrong link!!")

EOF
   
else
clear;
cac.sh 
fi 
fi
