      clear;
aria2c $1 -d /app/downloads/ > /dev/null 2>&1 ;

if [ -z "$(ls -A /app/downloads/)" ]; then
clear;
   printf "No file Downloaded!! Can't transfer to gdrive, may be you are using a wrong link!!"
else
clear;
cac.sh 
fi 
fi
